<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
        https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd" version="3.0">

    <!-- MySQL -->
    <persistence-unit name="mysql">
        <properties>
            <property name="datanucleus.ConnectionURL" value="jdbc:mysql://localhost/datanucleus"/>
            <property name="datanucleus.ConnectionUserName" value="datanucleus"/>
            <property name="datanucleus.ConnectionPassword" value="datanucleus"/>
            <property name="datanucleus.maxFetchDepth" value="-1"/>
        </properties>
    </persistence-unit>

</persistence>
